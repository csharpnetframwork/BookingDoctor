@model IEnumerable<BookingDoctor.Models.Doctor>

<h1>Diabetology Practice</h1>
<p>Our diabetology specialists provide comprehensive care for diabetes management:</p>

<div class="row">
    @foreach (var doctor in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Dr. @doctor.FirstName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@doctor.Hospital.Name</h6>
                    <p class="card-text">
                        <strong>Experience:</strong> @doctor.Experience years<br />
                        <strong>Location:</strong> @doctor.Hospital.Location<br />
                        <strong>Specializations:</strong> @doctor.Specialization
                    </p>
                    <a href="@Url.Action("BookAppointment", "Doctor", new { doctorId = doctor.DoctorId })"
                       class="btn btn-primary">Book Appointment</a>
                </div>
            </div>
        </div>
    }
</div>